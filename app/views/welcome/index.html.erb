
<div id="recipes">

<h3>Recipe Box</h3>
<img id="spaghetti" src="http://www.allthingsclipart.com/07/spaghetti.10.jpg" alt="Spaghetti"/>
<br />
<div class="container">
  <div class="row">
    <div class="col-sm-6" align="center">
        <div class="card-body">
          <a href="/recipes" class="btn btn-primary teal accent-4">Browse All Recipes</a>
      </div>


    </div>
    <br />
    <% if current_user %>
    <div class="col-sm-6" align="center">
        <div class="card-body">

          <a href="/users/<%=current_user.id%>" class="btn btn-primary teal accent-4">Your Saved Recipes</a>

        </div>
    </div>
    <br />
    <%end%>

    <div class="col-sm-6" align="center">
        <div class="card-body">
          <a href="/recipes/new" class="btn btn-primary teal accent-4">New Recipe</a>
        </div>
    </div>
</div>
</div>
</div>
