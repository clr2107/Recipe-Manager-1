<p id="notice"><%= notice %></p>
<div id="recipes">
<h3 id="welcome-header">Welcome to Recipe Box</h3>
<h5 id="welcome-subhead"><i>Organize and rate your favorite recipes</i></h5>
<img id="spaghetti" src="http://www.allthingsclipart.com/07/spaghetti.10.jpg" alt="Spaghetti"/>
<br />
<div class="container homepage">
  <div class="row">
    <div class="col-sm-6" align="center">
        <div class="card-body">
          <a href="/recipes" class="btn btn-primary">All Recipes</a>
        </div>
    </div>
    <br />
    <% if current_user %>
    <div class="col-sm-6" align="center">
        <div class="card-body">
          <a href="/users/<%=current_user.id%>" class="btn btn-primary">My Recipes</a>
        </div>
    </div>
    <%end%>
    <br />
    <div class="col-sm-6" align="center">
        <div class="card-body">
          <a href="/recipes/new" class="btn btn-primary">New Recipe</a>
        </div>
    </div>
</div>
</div>
</div>
